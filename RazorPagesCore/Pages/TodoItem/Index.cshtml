@page
@model RazorPagesCore.Pages.TodoItemModel

@{
    ViewData["Title"] = "TodoItem";
    Layout = "~/Pages/Shared/_UserLayout.cshtml";
}

<h1>Todo Items</h1>

<p>
    <a asp-page="./Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TodoItems[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodoItems[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodoItems[0].Complited)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TodoItems)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Complited)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
